<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="240dp"
    android:layout_margin="10dp"
    android:background="@drawable/cart_button_bg_blanco"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cart_button_bg_blanco"
        android:orientation="vertical"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/noticia"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="50dp"
            android:layout_gravity="center"
            android:background="@color/ColorWhiteContenido"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/noticia_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FCFFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/noticia_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Colpex"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/noticia_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center|center_horizontal"
            android:text="Ten en claro el enfoque de la asignatura" />
    </LinearLayout>

</LinearLayout>