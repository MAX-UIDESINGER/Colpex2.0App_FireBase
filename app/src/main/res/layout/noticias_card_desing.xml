<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    android:background="@drawable/cart_button_bg_blanco"
    android:id="@+id/carviewNoticias">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp"
        tools:ignore="UnusedAttribute">

        <androidx.cardview.widget.CardView
            android:id="@+id/noticia"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:elevation="50dp"
            android:backgroundTint="#FCFFFFFF"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/noticia_image"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:background="#FCFFFFFF"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/noticia_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/noticia"
            android:fontFamily="@font/roboto_medium"
            android:text="McDonal"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/noticia_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noticia_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/noticia"
            android:fontFamily="@font/roboto"
            android:text="texto" />

        <TextView
            android:id="@+id/row_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noticia_desc"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/noticia"
            android:foreground="?attr/selectableItemBackground"
            android:shadowColor="#FFFFFF"
            android:text="Ver mÃ¡s"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>